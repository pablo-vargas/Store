<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.view.AccountProfileFragment">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/title_account"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:elevation="11dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="30dp"
            android:backgroundTint="@color/colorPrimary"
            app:cardElevation="12dp"
            app:cardCornerRadius="15dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Nombre"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:elevation="13dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_baseline_account_circle_24"
                app:tint="@color/white" />
        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPhoneVerified"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="50dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:backgroundTint="@android:color/holo_green_light"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:drawableStart="@drawable/ic_baseline_phone_android_24"
                        android:paddingHorizontal="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/statusPhoneVerified"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:drawableTint="@color/white"
                        android:drawableEnd="@drawable/ic_baseline_check_circle_24"
                        android:textStyle="bold"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPhoneInvalid"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginVertical="10dp"
                android:checkable="true"
                android:layout_marginHorizontal="50dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:backgroundTint="@android:color/holo_red_light"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:drawableStart="@drawable/ic_baseline_phone_android_24"
                        android:paddingHorizontal="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/statusPhoneInvalid"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:drawableTint="@color/white"
                        android:textStyle="bold"
                        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:visibility="gone"
                android:id="@+id/cardUpdateProfile"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginVertical="10dp"
                android:checkable="true"
                android:layout_marginHorizontal="50dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:drawableStart="@drawable/ic_baseline_account_circle_24"
                        android:paddingHorizontal="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/updateProfile"
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAddress"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginVertical="10dp"
                android:checkable="true"
                android:layout_marginHorizontal="50dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:drawableStart="@drawable/ic_baseline_map_24"
                        android:paddingHorizontal="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/addresses"
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNotify"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginVertical="10dp"
                android:checkable="true"
                android:layout_marginHorizontal="50dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:drawableStart="@drawable/ic_baseline_notifications_active_24"
                        android:paddingHorizontal="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/notify"
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRecord"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginVertical="10dp"
                android:checkable="true"
                android:layout_marginHorizontal="50dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:drawableStart="@drawable/ic_baseline_history_24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/recordDelivery"
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:paddingHorizontal="5dp"
                        android:textStyle="bold"
                        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardExit"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginVertical="10dp"
                android:checkable="true"
                android:layout_marginHorizontal="50dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <TextView
                        android:paddingHorizontal="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/exit"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:drawableEnd="@drawable/ic_baseline_exit_to_app_24"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>



        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>